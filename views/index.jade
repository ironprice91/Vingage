extends layout

block content
	h1= title
	p Welcome, #{user.username}
	p: a(href="/auth/logout") Logout

	h3 Add a Public File
	form(method="post", action="/submitPublic", enctype="multipart/form-data")
		input(type="file", name="image")
		input(type="submit")

	if s3
		h1 Files
		ul
			for file in s3.Contents
				li
					ul
						li= file.Key
						li: a(href='https://s3.amazonaws.com/#{bucket}/#{file.Key}') Public Link
						li: video(width='320' height='240' controls): source(src='https://s3.amazonaws.com/#{bucket}/#{file.Key}')
