extends login-layout

block content
	link(href='http://fonts.googleapis.com/css?family=Shadows+Into+Light' rel='stylesheet' type='text/css')

	section.splash-background
		video.splash-video(autoplay loop)
			source(src="https://s3.amazonaws.com/refactoru/public/backgroundVideo.mp4" type="video/mp4")


	main.sign-in-form.row
		h1.splash-logo.col-md-offset-4 Vingage
		hr
		div.col-md-offset-1
			h3 Sign in
			form.sign-in(action="/auth/login" method="post")
				input#username-input.login-forms(type="text" name="username" placeholder="Username")
				input.login-forms(type="password" name="password" placeholder="Password")
				button.btn.btn-splash(type="submit") Login

			//- Sign up
			h3 Sign up
			form.sign-up(action="/auth/signup" method="post")
				input.login-forms(type="text" name="username" placeholder="Username")
				input.login-forms(type="email" name="email" placeholder="Email")
				input.login-forms(type="password" name="password" placeholder="Password")
				button.btn.btn-splash(type="submit") Sign Up